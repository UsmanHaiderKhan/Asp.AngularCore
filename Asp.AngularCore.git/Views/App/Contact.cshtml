
@model Contact
@{
    ViewBag.Title = "Contact us";
}
<form method="post">
    <div>
        <label asp-for="Name">Your Name</label><br />
        <input type="email" asp-for="Name" placeholder="Enter email">
    </div>
    <div>
        <label asp-for="Email">Email address</label><br />
        <input type="email" asp-for="Email" placeholder="Enter email">
    </div>
    <div>
        <label asp-for="Subject">Subject</label><br />
        <input type="text" asp-for="Subject" placeholder="Enter Subject">
    </div>
    <div>
        <label for="exampleInputEmail">Phone No</label><br />
        <input type="email" id="exampleInputEmail" name="phone" placeholder="Enter Phone No">
    </div>
    <div>
        <label for="exampleInputEmail">Message</label><br />
        <textarea rows="5" id="exampleInputEmail" name="message"></textarea>
    </div><br />
    <button type="submit" class="btn btn-default">Submit</button>
</form>

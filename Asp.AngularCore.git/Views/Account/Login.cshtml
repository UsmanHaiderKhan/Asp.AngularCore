@model LoginViewModel
@{
    ViewBag.Title = "Login";
}
<script src="~/Script/jquery-1.10.2.min.js"></script>
<script src="~/Script/jquery.validate.min.js"></script>
<script src="~/Script/jquery.validate.unobtrusive.min.js"></script>

<div class="row">
    <div class="col-lg-6 offset-3">
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="md-form">
                <input type="text" class="form-control" id="user" asp-for="UserName" />
                <label asp-for="UserName" for="user">UserName</label>
                <span asp-validation-for="UserName" class="text-center text-danger"></span>
            </div>
            <div class="md-form">
                <input type="password" class="form-control" id="password" asp-for="Password" />
                <label asp-for="Password" for="password">Password</label>
                <span asp-validation-for="Password" class="text-center text-danger"></span>
            </div>
            <div class="md-form">
                <input type="checkbox" asp-for="RememberMe" />&nbsp;<span asp-for="RememberMe">RememberMe?</span>
            </div>
            <div class="md-form">
                <button type="submit" class="btn btn-outline-success"><span class="fa fa-signin"></span>Login</button>
            </div>
        </form>
    </div>
</div>
